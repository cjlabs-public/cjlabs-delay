<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cjlabs.api.business.mapper.DelayJobTaskMapper">

    <resultMap id="DelayJobTaskResultMap" type="com.cjlabs.api.business.mysql.DelayJobTask">
        <id property="id" column="id"/>
        <result property="taskType" column="task_type"/>
        <result property="executeType" column="execute_type"/>
        <result property="retryStrategy" column="retry_strategy"/>
        <result property="retryDelaySeconds" column="retry_delay_seconds"/>
        <result property="retryCount" column="retry_count"/>
        <result property="maxRetryCount" column="max_retry_count"/>
        <result property="msgBody" column="msg_body"/>
        <result property="executeTime" column="execute_time"/>
        <result property="taskStatus" column="task_status"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createUser" column="create_user"/>
        <result property="createDate" column="create_date"/>
        <result property="updateUser" column="update_user"/>
        <result property="updateDate" column="update_date"/>
        <result property="remark" column="remark"/>

    </resultMap>

    <sql id="Base_Column_List">
        id
        , task_type, execute_type, retry_strategy, retry_delay_seconds, retry_count, max_retry_count, msg_body, execute_time, task_status, del_flag, create_user, create_date, update_user, update_date, remark
    </sql>

    <sql id="Base_Table">
        delay_job_task
    </sql>

    <!-- 获取最大 ID -->
    <select id="getMaxId" resultType="java.lang.Long">
        SELECT COALESCE(MAX(id), 0)
        FROM
        <include refid="Base_Table"/>
        WHERE del_flag = 'NORMAL'
    </select>

    <!-- 按分片范围查询待执行任务（完全走索引） -->
    <!-- 索引：(task_status, execute_time, id) -->
    <select id="queryPendingTasksByShardRange" resultMap="DelayJobTaskResultMap">
    <![CDATA[
        SELECT <include refid="Base_Column_List"/>
        FROM <include refid="Base_Table"/>
        WHERE task_status = 'PENDING'
          AND del_flag = 'NORMAL'
          AND execute_time <= #{now}
          AND id >= #{idStart}
          AND id
            < #{idEnd}
        ORDER BY execute_time ASC, id ASC
            LIMIT #{pageSize}
        OFFSET #{offset}
        ]]>
    </select>

    <!-- 原子性更新状态 PENDING -> PROCESSING（防重复） -->
    <update id="updateTaskStatusToProcessing">
        UPDATE
        <include refid="Base_Table"/>
        SET task_status = 'PROCESSING',
        update_user = #{updateUser},
        update_date = #{now},
        trace_id = #{traceId}
        WHERE id = #{taskId}
        AND task_status = 'PENDING'
    </update>
</mapper>